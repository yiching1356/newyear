<script>
    function celebrateAndGo() {
        // å™´ç™¼è±ªè¯å½©å¸¶
        var duration = 3 * 1000;
        var end = Date.now() + duration;

        (function frame() {
            confetti({ particleCount: 5, angle: 60, spread: 55, origin: { x: 0 }, colors: ['#ffd700', '#ff4d4d'] });
            confetti({ particleCount: 5, angle: 120, spread: 55, origin: { x: 1 }, colors: ['#ffffff', '#ff8c00'] });

            if (Date.now() < end) {
                requestAnimationFrame(frame);
            }
        }());

        // 1.5 ç§’å¾Œè·³è½‰åˆ° Google è¡¨å–®
        setTimeout(function() {
            window.location.href = "https://forms.gle/LTi1yAnpWrmjHRWH6"; 
        }, 1500);
    }
